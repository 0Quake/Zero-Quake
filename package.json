{
  "name": "zeroquake",
  "productName": "Zero Quake",
  "version": "0.5.0",
  "description": "地震に関する情報を即座に受信できるアプリケーションです。PLUM法含む緊急地震速報に加え、津波情報や地震情報の受信に対応しています。",
  "scripts": {
    "start": "electron ."
  },
  "build": {
    "win": {
      "icon": "src/img/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true,
      "shortcutName": "Zero Quake"
    }
  },
  "main": "src/main.js",
  "author": "Acialnat",
  "license": "GPL-2.0",
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs": "^0.0.1-security",
    "jsdom": "^21.1.0",
    "path": "^0.12.7",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Acialnat/Zero-Quake.git"
  },
  "bugs": {
    "url": "https://github.com/Acialnat/Zero-Quake/issues"
  },
  "homepage": "https://github.com/Acialnat/Zero-Quake#readme"
}
