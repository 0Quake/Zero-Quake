{
  "name": "zeroquake",
  "productName": "Zero Quake",
  "version": "0.6.1",
  "description": "地震に関する情報を即座に受信できるアプリケーションです。緊急地震速報に加え、津波情報や地震情報の受信に対応しています。このアプリ一つで、様々な種類の情報を、迅速に、分かりやすく表示します。",
  "scripts": {
    "start": "electron . --develop --debug-mode",
    "lint": "eslint src"
  },
  "build": {
    "win": {
      "icon": "src/img/icon.ico",
      "publish": {
        "provider": "github",
        "owner": "{USER_NAME}"
      },
      "target": {
        "target": "nsis",
        "arch": [
          "ia32",
          "x64"
        ]
      }
    },
    "nsis": {
      "artifactName": "ZeroQuake_Setup.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true,
      "shortcutName": "Zero Quake"
    }
  },
  "main": "src/main.js",
  "author": "benidate",
  "license": "GPL-2.0",
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs": "^0.0.1-security",
    "jsdom": "^21.1.1",
    "path": "^0.12.7",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0",
    "eslint": "^8.38.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0Quake/Zero-Quake.git"
  },
  "bugs": {
    "url": "https://github.com/0Quake/Zero-Quake/issues"
  },
  "homepage": "https://zeroquake.wwww.jp/"
}
